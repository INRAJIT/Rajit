<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lgp"
    tools:context=".Login">



        <ImageView
            android:id="@+id/img1"
            android:layout_width="268dp"
            android:layout_height="80dp"
            android:background="@drawable/lg"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="EMAIL:"
            android:textSize="20dp"
            android:textColor="@color/White"
            android:layout_marginLeft="10dp"


            />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:hint="email"
            android:textSize="18dp"
            android:textColor="@color/White"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:gravity="start"


            />

        <View
            android:id="@+id/view1"
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/LightGrey" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD:"
            android:textSize="20dp"
            android:textColor="@color/White"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"

            />


        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:hint = "password"
            android:textSize="18dp"
            android:textColor="@color/White"
            android:password="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"

            />
        <View
            android:id="@+id/view2"
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/LightGrey" />


        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:text="LogIn"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="18dp"
            android:textAllCaps="true"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/yll"
            android:clickable="true"
            android:layout_weight="0"
            android:background="@drawable/tag_button_corner"
            android:textColor="@color/btnblack"
            />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/Goldenrod"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:linksClickable="true"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New to Mottainai?"
                android:textSize="18dp"
                android:textColor="@color/White"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:linksClickable="true"
                android:fontFamily="sans-serif-condensed"

                />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv4"
                android:text="Signup"
                android:textSize="18dp"
                android:textColor="@color/yll"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:linksClickable="true"
                android:fontFamily="sans-serif-condensed"

                />

        </RelativeLayout>
    </LinearLayout>
